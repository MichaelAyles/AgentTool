{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@vibecode/shared": ["./packages/shared/src"],
      "@vibecode/adapter-sdk": ["./packages/adapter-sdk/src"],
      "@vibecode/backend": ["./packages/backend/src"],
      "@vibecode/frontend": ["./packages/frontend/src"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".next",
    "coverage"
  ],
  "references": [
    {
      "path": "./packages/shared"
    },
    {
      "path": "./packages/adapter-sdk"
    },
    {
      "path": "./packages/backend"
    },
    {
      "path": "./packages/frontend"
    }
  ]
}