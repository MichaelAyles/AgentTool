# Staging Environment Configuration

# Application
NODE_ENV=staging
PORT=3000

# Database
DATABASE_URL=postgresql://vibecode:staging_password@postgres:5432/vibecode_staging
POSTGRES_PASSWORD=staging_password

# Redis
REDIS_URL=redis://redis:6379

# Security
JWT_SECRET=staging_jwt_secret_for_testing_only
SESSION_SECRET=staging_session_secret_for_testing_only

# API Keys (use test keys for staging)
ANTHROPIC_API_KEY=your_test_anthropic_api_key_here
GOOGLE_AI_API_KEY=your_test_google_ai_api_key_here

# Security Configuration (more permissive for testing)
DANGEROUS_MODE_ENABLED=true
AUDIT_LOG_LEVEL=debug
SECURITY_AUDIT_ENABLED=true

# Frontend
VITE_API_URL=https://staging.vibecode.com

# Monitoring
GRAFANA_PASSWORD=staging_admin

# Rate Limiting (more permissive for testing)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# CORS (allow more origins for testing)
ALLOWED_ORIGINS=https://staging.vibecode.com,http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
ELASTICSEARCH_ENABLED=false

# Backup (disabled for staging)
BACKUP_ENABLED=false

# Email (use test SMTP for staging)
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=staging@vibecode.com

# Alerting (staging channels)
ALERT_EMAIL=staging-alerts@vibecode.com
SLACK_WEBHOOK_URL=your-staging-slack-webhook-url